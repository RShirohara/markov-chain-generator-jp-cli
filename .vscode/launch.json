  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'markov'",
      "cargo": {
        "args": [
          "build",
          "--bin=markov",
          "--package=markov-chain-generator-jp-cli"
        ],
        "filter": {
          "name": "markov",
          "kind": "bin"
        }
      },
      "args": [ "-i=./test/sample.txt" ],
      "cwd": "${workspaceFolder}",
      "env": { "RUST_BACKTRACE": "full" }
    }
  ]
}
